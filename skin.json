{
    "name": "Material",
    "author": "kuska1",
    "description": "A theme based on Google's Material Design.",
    "tags": ["monet", "material", "material you", "material design", "material 3"],
    "version": "1.0.0",
    "header_image": "https://github.com/kuska1/KOOL-UI-Theme/blob/main/github/s_library.jpg?raw=true",
    "splash_image": "https://github.com/kuska1/KOOL-UI-Theme/blob/main/github/s_library.jpg?raw=true",

    "github": {
        "owner": "kuska1",
        "repo_name": "Material-Theme"
    },

    "Steam-WebKit": "webkit.css",
    "RootColors": "css/main/root.css",
    "UseDefaultPatches": true,

    "Conditions": {
        "Developer's Website": { 
            "description": "https://kuska1.github.io",
            "default": "yes",
            "tab": "Info",
            "values": {
                "yes": {},
                "no": {}
            }
        },
        "Appearance": { 
            "description": "Choose light or dark mode.",
            "default": "Dark",
            "tab": "Style",
            "values": {
                "Light": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/main/appearance/light.css"
                    }
                },
                "Dark": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/main/appearance/dark.css"
                    }
                }
            }
        },
        "Color": { 
            "description": "Choose source color.",
            "default": "Blue",
            "tab": "Style",
            "values": {
                "Red": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/main/colors/red.css"
                    }
                },
                "Green": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/main/colors/green.css"
                    }
                },
                "Blue": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/main/colors/blue.css"
                    }
                },
                "Yellow": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/main/colors/yellow.css"
                    }
                }
            }
        },
        "Icons": { 
            "description": "Choose icons style.",
            "default": "Rounded",
            "tab": "Style",
            "values": {
                "Rounded": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/icons/rounded.css"
                    }
                }
            }
        },
        "Font": { 
            "description": "Choose font.",
            "default": "Open Sans",
            "tab": "Style",
            "values": {
                "Default": {},
                "Open Sans": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/fonts/opensans.css"
                    }
                },
                "Google Sans": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/fonts/googlesans.css"
                    }
                },
                "Line Font": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/fonts/linefont.css"
                    }
