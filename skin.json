            "default": "Alternative",
            "tab": "Style",
            "values": {
                "Default": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/onlineIndicator/circle.css"
                    }
                },
                "Alternative": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/onlineIndicator/alt.css"
                    }
                }
            }
        },
        "Toolbar Title": {
