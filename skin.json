                "Android": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/steamIcon/android.css"
                    }
                },
                "Google": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/steamIcon/google.css"
                    }
                },
                "Appearance": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/steamIcon/appearance.css"
                    }
                },
                "Color Scheme": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/steamIcon/colorscheme.css"
                    }
                }
            }
        },
        "Toolbar Title Based on Icon": {
            "description": "Choose \"Steam\" title to icon name.",
            "default": "yes",
            "tab": "Toolbar",
            "values": {
                "no": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/steamIcon/defaultitle.css"
