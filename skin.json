                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/animations/enable.css"
                    }
                }
            }
        },
        "Badges for Contributes": { 
            "description": "Custom badges at user profiles near nickname.\n(Can't be disabled)",
            "default": "Enabled",
            "tab": "Extra",
            "values": {
                "Enabled": {}
            }
        },
        "Loading Style": { 
            "description": "Choose loading image.",
            "default": "Material Design",
            "tab": "Extra",
            "values": {
