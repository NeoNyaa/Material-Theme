            "description": "Choose profile picture shape.",
            "default": "Circle",
            "tab": "Shapes",
            "values": {
                "Square": {},
                "Rounded Square": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/avatar/roundedSquare.css"
                    }
                },
                "Circle": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/avatar/circle.css"
                    }
                }
            }
        },
        "Game Icons Shape": {
            "description": "Choose shape of game icons.",
            "default": "Circle",
            "tab": "Shapes",
            "values": {
                "Square": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/gameIcons/common.css"
                    }
                },
                "Rounded Square": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/gameIcons/roundedSquare.css"
                    }
                },
                "Circle": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/gameIcons/circle.css"
                    }
                }
            }
        },
        "Achievements Icons Shape": {
            "description": "Choose shape of achievements icons.",
