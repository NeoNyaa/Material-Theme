				},
                "Hide": { 
				    "TargetCss": {
						"affects": ["^Steam$"], "src": "css/extra/privacy/nameBalanceHide.css"
					}
				},
                "Full Hide": {
				    "TargetCss": {
						"affects": ["^Steam$"], "src": "css/extra/privacy/nameBalanceFullHide.css"
					}
				}
            }
        },
        " - Show balance after hover? ": {
            "description": "Doesn't work with Full Hide.",
            "default": "yes",
            "tab": "Privacy",
            "values": {
                "yes": {
				    "TargetCss": { 
						"affects": ["^Steam$"], "src": "css/extra/privacy/nameBalanceAfterHover.css"
					}
				},
                "no": {}
            }
        },
