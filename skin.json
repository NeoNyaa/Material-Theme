                },
                "Circle": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/achievementsIcons/circle.css"
                    }
                }
            }
        },
        "What's New": {
            "description": "Show/Compact/Hide What's New section.",
            "default": "Compact",
            "tab": "Library",
            "values": {
                "Show": {},
                "Compact": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "css/extra/whatsNew/compact.css"
                    }
                },
                "Hide": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "css/extra/whatsNew/hide.css"
                    }
                }
            }
        },
        "Rare Achievements based on Source Color": {
            "description": "Rare Achievements outline color & effects based on Color Scheme.",
            "default": "yes",
            "tab": "Library",
            "values": {
                "no": {},
                "yes": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/achievementsIcons/rareSourceColor.css"
                    }
                }
            }
        },
        "Remove Shiny Effect": {
