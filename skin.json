        "Toolbar Icon": { 
            "description": "Choose icon in toolbar.",
            "default": "Material Design",
            "tab": "Toolbar",
            "values": {
                "Steam": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/extra/steamIcon/steam.css"
