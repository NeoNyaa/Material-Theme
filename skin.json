            "default": "Yes",
            "tab": "Library",
            "values": {
                "no": {},
                "yes": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "css/extra/libraryAnimations/noShiny.css"
                    }
                }
            }
        },
