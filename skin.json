    "Patches": [
        {
            "MatchRegexString": "http.*steamcommunity.*(id|profiles).[^\/]+\/?$",
            "TargetJs": "js/extra/badges/badges.js",
            "TargetCss": "css/extra/badges/badges.css"
        }
    ]
